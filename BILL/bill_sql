drop table "courses";
drop table "textbooks";
drop table "courses_textbooks";




CREATE TABLE "courses" (
	"course_serial_id" SERIAL PRIMARY KEY,
	"university" VARCHAR NOT NULL,
	"campus" VARCHAR,
	"campus_id" VARCHAR,
	"term" VARCHAR,
	"term_id" VARCHAR,
	"department" VARCHAR NOT NULL,
	"department_id" VARCHAR,
	"course" VARCHAR NOT NULL,
	"course_id" VARCHAR,
	"section" VARCHAR NOT NULL,
	"section_id" VARCHAR	
);

CREATE TABLE "textbooks" (
	"textbook_id" SERIAL PRIMARY KEY,
	"campus_id" VARCHAR,
	"term_id" VARCHAR,
	"department_id" VARCHAR,
	"course_id" VARCHAR,
	"section_id" VARCHAR,
	"title" VARCHAR NOT NULL,
	"edition" VARCHAR,
	"publisher" VARCHAR,
	"book_type" VARCHAR NOT NULL,
	"book_id" VARCHAR,
	"recommend_type" VARCHAR,
	"isbn" VARCHAR,
	"price" FLOAT NOT NULL
);






CREATE TABLE "courses_textbooks" (	
	"courses_textbooks_pkey" SERIAL,
	"course_serial_id" int,
	"textbook_id" int,
	PRIMARY KEY ("textbook_id"),
		FOREIGN KEY("course_serial_id") REFERENCES "courses" ("course_serial_id"),
		FOREIGN KEY("textbook_id") REFERENCES "textbooks" ("textbook_id")	
);


